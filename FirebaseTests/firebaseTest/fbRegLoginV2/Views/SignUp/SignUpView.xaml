<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:signUp="clr-namespace:fbRegLoginV2.Views.SignUp"
             xmlns:views="clr-namespace:fbRegLoginV2.Views"
             x:Class="fbRegLoginV2.Views.SignUp.SignUpView"
             
             Title="SignUpView">
    <ScrollView>
        <VerticalStackLayout Padding="25" MaximumWidthRequest="800">
            <Label FontSize="Large" Text="Sign Up" />
            <signUp:SignUpFormView Margin="0,25,0,0" BindingContext="{Binding SignUpFormViewModel}" />
            <views:Link Route="//SignIn" Text="Have an account? Sign in" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>