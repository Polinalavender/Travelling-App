<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fbRegLogin.SignUp.SignUpFormView">
    
            <VerticalStackLayout>
                <Label FontAttributes="Bold" Text="Email"></Label>
                <Entry Margin="0,2,0,0" Text="{Binding Email}"></Entry>
                <VerticalStackLayout>
                    <Label FontAttributes="Bold" Text="Password"></Label>
                    <Entry Margin="0,10,0,0" IsPassword="True" Text="{Binding Password}"></Entry>
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label FontAttributes="Bold" Text="Confirm Password"></Label>
                    <Entry Margin="0,2,0,0" IsPassword="True" Text="{Binding ConfirmPassword}"></Entry>
                </VerticalStackLayout>
                
                <Button Margin="0,25,0,0" Command="{Binding SignUpCommand}" HorizontalOptions="Start" 
                        Text="Sign Up"></Button>
            </VerticalStackLayout>
</ContentView>